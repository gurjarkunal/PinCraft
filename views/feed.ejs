<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap justify-start gap-10">
            <%  posts.forEach(function(ele){%>
            <div class="card w-50">
               <div class="w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
                   <img class="w-full h-full object-cover" src="/images/uploads/<%= ele.image %>" alt="">
               </div>
                   <h5 class="mt-2 text-sm"><%= ele.title %></h5>
                   <h5 class="mt-2 text-sm"><%= ele.description %></h5>
                   <h6 class="mt-2 text-xs font-semibold opacity-50">@<%= ele.user.username%></h6>
               </div>
               <%})%>
           </div>
    </div>
</div>
<% include ./partials/footer.ejs %>