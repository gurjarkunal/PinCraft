<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
  <div class="cards flex flex-wrap justify-start gap-3">
    <% posts.reverse().forEach(function(ele){ %>
    <a
      href="/showfull/?img=/images/uploads/<%= ele.image %>&title=<%= ele.title %>&desc=<%= ele.description %>&username=<%= ele.user.username %>&id=<%= ele._id %>"
      class="card w-50 border-solid"
    >
      <div class="card w-50">
        <div class="w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
          <img
            class="w-full h-full object-cover"
            src="/images/uploads/<%= ele.image %>"
            alt=""
          />
        </div>
        <div class="flex">
          <h6 class="mt-2 text-xs font-semibold opacity-50">
            @<%= ele.user.username%>
          </h6>
          <a class="ml-5 mt-1" href="/favourites/post/<%= ele._id %>">
            <% if (user.favourites.indexOf(ele._id) !== -1){ %>
            <i class="ri-star-fill text-red-600"></i>
            <% } else { %>
            <i class="ri-star-line"></i>
            <% } %>
          </a>
        </div>
        <!-- <h5 class="mt-2 text-sm"><%= ele.title %></h5>
                   <h5 class="mt-2 text-sm"><%= ele.description %></h5>-->
      </div>
    </a>
    <% })%>
  </div>
</div>
<% include ./partials/footer.ejs %>
