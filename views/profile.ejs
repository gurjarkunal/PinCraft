<% include ./partials/header.ejs %>
  <form
    id="uploadform"
    hidden
    action="/fileupload"
    method="post"
    enctype="multipart/form-data"
  >
    <input type="file" name="image" />
  </form>
  <div class="profdets flex flex-col items-center mt-[25px]">
    <div class="relative">
      <span
        id="uploadicon"
        class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200"
      >
        <i class="text-zinc-800 ri-pencil-fill"></i>
      </span>
      <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="/images/uploads/<%= user.profileImage%>"
          alt=""
        />
      </div>
    </div>
    <h1 class="text-3xl font-semibold mt-3 text-white">@<%= user.username%></h1>
    <h3 class="text-md mt-2 text-white"><%= user.fullname%></h3>
    <a
      href="/edit/?id=<%= user._id %>"
      class="edit_btn px-7 py-2 rounded-full font-semibold mt-4"
      >Edit</a
    >
    <a
      href="/add"
      class="create px-10 py-2 rounded-lg bg-red-600 text-xs font-semibold mt-5 text-white"
    >
      Create New Pin
    </a>
  </div>
    <div class="container mt-8">
      <div class="box">
        <% user.posts.forEach(function(ele) { %>
        <a
          href="/showfull/?img=/images/uploads/<%= ele.image %>&title=<%= ele.title %>&desc=<%= ele.description %>&username=<%= user.username %>"
        >
            <img class="" src="/images/uploads/<%= ele.image %>" alt="" />
        </a>
        <%})%>
      </div>
    </div>

<script>
  document.querySelector("#uploadicon").addEventListener("click", function () {
    document.querySelector("#uploadform input").click();
  });

  document
    .querySelector("#uploadform input")
    .addEventListener("change", function () {
      document.querySelector("#uploadform").submit();
    });
</script>
<% include ./partials/footer.ejs %>
