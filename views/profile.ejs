<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
  <form
    id="uploadform"
    hidden
    action="/fileupload"
    method="post"
    enctype="multipart/form-data"
  >
    <input type="file" name="image" />
  </form>
  <div class="profdets flex flex-col items-center mt-[25px]">
    <div class="relative">
      <span
        id="uploadicon"
        class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200"
      >
        <i class="text-zinc-800 ri-pencil-fill"></i>
      </span>
      <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="/images/uploads/<%= user.profileImage%>"
          alt=""
        />
      </div>
    </div>
    <h1 class="text-3xl font-semibold mt-3">@<%= user.username%></h1>
    <h3 class="text-md mt-2"><%= user.fullname%></h3>
    <a
      href="/edit"
      class="px-7 py-2 bg-zinc-700 rounded-full text-xs font-semibold mt-4"
      >Edit</a
    >
    <a
      href="/add"
      class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-5"
    >
      Add New Post
    </a>
  </div>
  <div class="cards flex flex-wrap gap-10 px-10 py-8">
    <% user.posts.forEach(function(ele){%>
    <a
      href="/showfull/?img=/images/uploads/<%= ele.image %>&title=<%= ele.title %>&desc=<%= ele.description %>&username=<%= user.username %>"
      class="card w-50"
    >
      <div class="w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="/images/uploads/<%= ele.image %>"
          alt=""
        />
      </div>
      <!-- <h5 class="mt-2 text-sm"><%= ele.title %></h5>
      <h5 class="mt-2 text-sm"><%= ele.description %></h5> -->
    </a>
    <%})%>
  </div>
</div>
<script>
  document.querySelector("#uploadicon").addEventListener("click", function () {
    document.querySelector("#uploadform input").click();
  });

  document
    .querySelector("#uploadform input")
    .addEventListener("change", function () {
      document.querySelector("#uploadform").submit();
    });
</script>
<% include ./partials/footer.ejs %>
