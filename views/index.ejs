<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1618005182384-a83a8bd57fbe?q=80&w=1964&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center">
  <div class="w-[30vw]  bg-white px-20 py-10 rounded-[30px]" >
    <img class="w-30 h-11 mx-auto" src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo"  />
      <h1 class="text-3xl tracking-tight mb-6 capitalize text-center font-semibold text-zinc-700 leading-none">Log in to see more</h1>
    <% if (error.length > 0){ %>
      <p class="error text-red-700 text-center"><%= error %></p>
      <% } %>
    <form action="/login" method="post">
      <label class="px-2" for="">Username</label>
      <input class="border-2 rounded-2xl block mb-3 w-full px-3 py-2" type="text" name="username" placeholder="Username">
      <label class="px-2 " for="">Password</label>
      <input class="border-2 rounded-2xl block  mb-2 w-full px-3 py-2" type="password" name="password" placeholder="Password">
      <a href="">Forgot Password? </a>
      <input class="rounded-full block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Login">
      <p class="text-xs text-zinc-500 text-center mt-7 w-3/4 mx-auto">By continuing, you agree to Pinterest's<a href="" class="font-semibold text-black  "> Terms of Service</a> and acknowledge you've read our <a href="" class="font-semibold text-black  ">Privacy Policy.</a> <a href="" class="font-semibold text-black" >Notice at collection</a></p>
      <br>
      <a href="/register" class="text-center w-full hover:text-red-700 text-zinc-700 font-semibold inline-block mt-4">Don't have an account?</a>
    </form>
  </div>
</div>
<% include ./partials/footer.ejs %>