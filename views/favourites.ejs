<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap justify-start gap-3">
        <% posts.forEach(post =>{ %>
            <a
              href="/showfull/?img=/images/uploads/<%= post.image %>&title=<%= post.title %>&desc=<%= post.description %>&username=<%= user.username %>"
              class="card w-50"
            >
              <div class="card w-50">
                <div class="w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
                  <img
                    class="w-full h-full object-cover"
                    src="/images/uploads/<%= post.image %>"
                    alt=""
                  />
                </div>
                <div class="flex">
                  <h6 class="mt-2 text-xs font-semibold opacity-50">@<%= post.user.username %></h6>
                <a class="ml-5 mt-1" href="/favourites/<%= post._id %>">
                  <% if (user.favourites.indexOf(post._id) !== -1){ %>
                    <i class="ri-star-fill text-red-600"></i>
                  <% } else { %>
                      <i class="ri-star-line"></i>
                    <% } %>
                  </a>
                </div>
                
              </div>
            </a>
            <% }) %>
    </div>
</div>
<% include ./partials/footer.ejs %>