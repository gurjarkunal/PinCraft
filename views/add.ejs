<% include ./partials/header.ejs %>
    <h1 class="text-2xl ml-[30px] mt-[30px] font-semibold">Create a new post.</h1>
    <hr class="opacity-10 mt-3">
    <div class="flex items-center justify-center mt-5">
        <form action="/createpost" method="post" enctype="multipart/form-data" class="w-full max-w-md">
            <div class="mb-4">
                <input class="block w-full px-3 py-2" type="file" name="postimage">
            </div>
            <div class="mb-4">
                <input class="text-black block w-full px-3 py-2 rounded-md border-2" type="text" placeholder="Title" name="title">
            </div>
            <div class="mb-4">
                <textarea class="text-black block w-full px-3 py-2 rounded-md border-2" placeholder="Description" rows="10" name="description"></textarea>
            </div>
            <div>
                <input class="create block w-full px-3 py-2 rounded-md bg-red-600" type="submit" value="Create Post">
            </div>
        </form>
    </div>

